    <!-- JavaScript for Interactivity -->
    <script>
        // Adding some interactivity: Highlight sections when hovered
        document.querySelectorAll('.rubric-card').forEach(function(card) {
            card.addEventListener('mouseenter', function() {
                card.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
            });

            card.addEventListener('mouseleave', function() {
                card.style.boxShadow = 'none';
            });
        });

        /*
        Explanation of the script:
        - This script selects all elements with the class `rubric-card`.
        - When a user hovers over a card, a shadow effect is applied to make it stand out.
        - When the mouse leaves the card, the shadow effect is removed.
        */
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
